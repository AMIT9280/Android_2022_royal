<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/l_line"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/login"
            android:layout_alignLeft="@+id/login"
            android:layout_alignRight="@+id/login"
            android:background="#FFF" />

        <TextView
            android:id="@+id/T_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l_line"
            android:layout_alignLeft="@+id/l_line"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="#fff"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/T_email"
            android:layout_alignLeft="@+id/T_email"
            android:hint="xxx@xx.com"
            android:textColorHint="#fff" />

        <View
            android:id="@+id/e_mail"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignLeft="@+id/edt_email"
            android:layout_marginHorizontal="5dp"
            android:background="#fff"

            />

        <TextView
            android:id="@+id/T_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/e_mail"
            android:layout_alignLeft="@+id/e_mail"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#fff"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/T_pass"
            android:layout_alignLeft="@+id/T_pass"
            android:hint="xxxxx"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edt_email"
            android:layout_alignLeft="@+id/edt_pass"
            android:layout_marginHorizontal="5dp"
            android:background="#fff" />

        <View
            android:id="@+id/pass_viw"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/edt_pass"
            android:layout_alignLeft="@+id/edt_pass"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_viw"
            android:layout_marginLeft="570dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="Forgot Password ?"
            android:textColor="#FFFFFF" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/btn"
        android:layout_below="@+id/relative_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-40dp"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="login"
            android:paddingVertical="10dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Register"
            android:layout_weight="1"
            android:text="Register"
            android:paddingVertical="10dp"
            />
    </LinearLayout>
</RelativeLayout>